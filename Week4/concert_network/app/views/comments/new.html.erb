<div class= "container">
	<div class="row">
		<div class="col-md-8">
			<div class="panel panel-default">
  				<div class="panel-heading">
   					<h3 class="panel-title">Add a new comment:</h3>
   				</div>
   				<div class="panel-body">
  					<%= form_for [@concert, @comment] do |f|%>
  					<div>
						<%= f.label :name %><br>
						<%= f.text_field :commentator %>
					</div>
					<div>
						<%= f.label :comment %><br>
						<%= f.text_area :comment , :id => "comment-box" %>
					</div>
					<%= f.button  "Publish comment" %>
					<% end %>
 				</div>
  			</div>
  			<p class="back-link"><%= link_to "< Back", concert_path(@concert) %></p>
		</div>
	</div>
</div>