<h1>Adding concert:</h1>
<%= form_for @concert do |f|%>
<%= f.label :artist %>
<%= f.text_field :artist %>

<%= f.label :venue %>
<%= f.text_field :venue %>

<%= f.label :city %>
<%= f.text_field :city %>

<%= f.label :date %>
<%= f.date_field :date %>

<%= f.label :price %>
<%= f.number_field :price %>

<%= f.label :description %>
<%= f.text_area :description %>

<%= f.button %>
<% end %>

<p class="back-link"><%= link_to "< Back to Concerts", concerts_path %></p>