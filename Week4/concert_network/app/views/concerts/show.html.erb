<div class='container'>
	<div class= 'row'>
		<div class="col-md-8">
			<div class="panel panel-default">
  				<div class="panel-heading">
    				<h3 class="panel-title"><%= @concert.artist %></h3>
  				</div>
  				<div class="panel-body">
  					<ul>
  						<li><span class='bold-title'>Venue: </span><%= @concert.venue %></li>
  						<li><span class='bold-title'>City: </span><%= @concert.city %></li>
  						<li><span class='bold-title'>Date: </span><%= @concert.date %></li>
  						<li><span class='bold-title'>Price: </span><%= @concert.price %></li>
  						<li><span class='bold-title'>Details: </span><%= @concert.description %></li>
  					</ul>
  				</div>
			</div>
		</div>
	</div>
</div>
<div class="container">
	<div class= 'row'>
		<div class="col-md-8">
    <%= render "listing_comments" %>
		<p class="back-link"><%= link_to "< Back", concerts_path %></p>
	</div>
</div>

