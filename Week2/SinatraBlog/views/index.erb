<h2>Sinatra Blog</h2>
<h2>Check our posts!</h2>
<table>
	<thead>
		<th>Date</th> <th>Title</th>
	</thead>
<% @posts.each_with_index do |post, index| %>
	<tbody>
		<tr><td><%= post.date %></td> <td><a href="/post_details/<%= index %>"><%= post.title %></a></td></tr>
	</tbody>
<% end %>
</table>
<h5><a href="/new_post">Add a New Post</a><h5>



